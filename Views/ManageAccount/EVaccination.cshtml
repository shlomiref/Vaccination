@model AppForVaccine.Models.VaccinationModel

@{
    ViewBag.Title = "EVaccination";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="card shadow mb-2 p-5" style=" margin: 0px 50px 0px 350px;
    max-width: 750px;
    max-height: 750px;">

    <h2 class="text-info">ערוך נתוני חיסון</h2>
    <hr />

    <div class="row mb-2">
        <div id="msg">

        </div>
    </div>
    <div class="page-content-wrapper">
        <div class="page-content" >
            <div class="page-bar">

            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="card card-box">

                        <div class="card-body" id="bar-parent">

                            <form action="EVaccination" method="Post" id="form_sample_1" class="form-horizontal" autocomplete="off" novalidate="novalidate">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                @Html.HiddenFor(x => x.vaccineId)
                                <div class="form-body">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3">
                                            שם החיסון
                                            <span class="required" aria-required="true">  </span>
                                        </label>
                                        <div class="col-md-5">
                                            @Html.TextBoxFor(m => m.VaccineName, new { @class = "form-control input-height", placeholder = "enter VaccineName" })
                                            @Html.ValidationMessageFor(m => m.VaccineName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group row">
                                        <label class="control-label col-md-3">
                                            יצרן
                                            <span class="required" aria-required="true">  </span>
                                        </label>
                                        <div class="col-md-5">
                                            @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control input-height", placeholder = "enter Manufacturer" })
                                            @Html.ValidationMessageFor(m => m.Manufacturer, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group row">
                                        <label class="control-label col-md-3">
                                            תוקף החיסון
                                            <span class="required" aria-required="true">  </span>
                                        </label>
                                        <div class="col-md-5">
                                            @Html.TextBoxFor(model => model.ValidityOfVaccine, new { @class = "form-control input-height", placeholder = "statue ValidityOfVaccine" })

                                            @Html.ValidationMessageFor(m => m.ValidityOfVaccine, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group row">
                                        <label class="control-label col-md-3">
                                            מחזוריות
                                            <span class="required" aria-required="true">  </span>
                                        </label>
                                        <div class="col-md-5">
                                            @Html.TextBoxFor(model => model.Month, new { @class = "form-control input-height", placeholder = "Month " })

                                            @Html.ValidationMessageFor(m => m.Month, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <br />
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="offset-md-3 col-md-3">
                                                <button type="submit" class="btn btn-info" id="submitData">שמור שינויים</button>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </form>




                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
@section scripts{
    <script src="~/Content/JS/jquery-3.6.0.js"></script>
    <script src="~/Content/JS/jquery.validate.js"></script>
    <script src="~/Content/JS/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/JS/jquery.unobtrusive-ajax.js"></script>
    <script>
        $("#form0").attr("enctype", "multipart/form-data")

        function clearAll() {
            $("#form0").trigger("reset");
        }
    </script>

}
