                                                        @Html.ActionLink("חסן", "VaccinatePatient1", new { id = item.PatientVaccinatedId })
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <hr style="color:blue" />
                <br />
            </div>
        </div>
