<body>
     

  <div class="w3-clear"></div>
    <div class="wrapper">
        @*Sidebar Navegation Start Here*@
        
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" href="@Url.Action("Index", "ManageAccount")">
