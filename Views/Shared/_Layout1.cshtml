                </a>

                <ul class="sidebar-nav">

                    <li class="sidebar-item active">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "ManageAccount")">
                            <i class="fa-solid fa-gauge"></i><span class="align-middle">ראשי</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("UserList", "ManageAccount")">
                            <i class="fa-regular fa-users"></i><span class="align-middle">משתמשים</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("GetTherapist", "ManageAccount")">
                            <i class="fa-solid fa-user-doctor"></i><span class="align-middle">מטפלים</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("VaccineReminder", "ManageAccount")">
                            <i class="fa-sharp fa-solid fa-business-time"></i><span class="align-middle">תזכורת</span>
                        </a>
                    </li>

                    @*<li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("GetVaccinationRecord", "ManageAccount")">
                            <i class="fa-light fa-person"></i><span class="align-middle">Vaccine Patient</span>
                        </a>
                    </li>*@

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("GetVaccine", "ManageAccount")">
                            <i class="fa-solid fa-syringe"></i><span class="align-middle">חיסונים</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("GetCity", "ManageAccount")">
                            <i class="fa-solid fa-hospital"></i><span class="align-middle">מרפאות</span>
                        </a>
                    </li>


                    <li class="nav-item dropdown">
                        <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-bs-toggle="dropdown">
                            <i class="align-middle" data-feather="settings"></i>
                        </a>

                        <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
                            &nbsp;&nbsp;&nbsp;<i class="fa-solid fa-file-chart-column fs-4" style="color: rgba(233,236,239,.5);"></i>&nbsp;&nbsp;&nbsp;<span class="fs-4" style="color: rgba(233,236,239,.5);">דוחות</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item fs-4" href="@Url.Action("Report", "ManageAccount")"><i class="fa-solid fa-arrow-trend-up"></i> צפייה בדוחות</a>
                            <a class="dropdown-item fs-4" href="@Url.Action("ReportDownload", "ManageAccount")"><i class="fa-solid fa-chart-user"></i> הפקת דוחות</a>
                            <div class="dropdown-divider"></div>

                        </div>



                    <li class="sidebar-header border-top mt-2 fs-4 text-muted">
                    </li>


                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
